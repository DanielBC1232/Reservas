@model IEnumerable<Reservas.Models.Reserva>

@{
    ViewBag.Title = "UsuarioReserva";

}

<div class="container-fluid">
    <button id="btnPasado" class="btn btn-primary">Mostrar Reservas Pasadas</button>
    <button id="btnFuturo" class="btn btn-secondary">Mostrar Reservas Futuras</button>

</div>

<div id="tablaReservas" class="mt-3">
    <!-- aqui se cargará la tabla de reservas (vista parcial) -->
</div>

@section Scripts {
    <script>
    $(document).ready(function () {
            // Botón para cargar reservas pasadas
            $("#btnPasado").click(function () {
                cargarReservas("pasado");
            });

            // Botón para cargar reservas futuras
            $("#btnFuturo").click(function () {
                cargarReservas("futuro");
            });

            function cargarReservas(tipo) {
                $.ajax({
                    url: '/Reservas/ObtenerReservas',
                    method: 'GET',
                    data: { tipo: tipo },
                    success: function (html) {
                        $("#tablaReservas").html(html); // Renderizar la vista parcial
                    },
                    error: function () {
                        alert("Error al cargar las reservas.");
                    }
                });
            }
        });</script>
}