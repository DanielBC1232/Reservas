
@{
    ViewBag.Title = "Reservar";
}
@Html.ActionLink("UsuarioReservas", "UsuarioReservas", "Reservas")
<div class="d-flex bg-white border border-primary rounded-3 pb-4 ps-2 row align-items-center align-items-baseline">

    <h2 class="text-primary mb-3 mt-2">Reservar</h2>
    <hr class="text-primary">

    <div class="col">
        <h4 class="text-primary py-2">Rango de horas</h4>
        <div class="col-3 d-flex">

            <input type="time" class="form-control me-2" id="tiempoInicio" />
            <h3 class="">-</h3>
            <input type="time" class="form-control ms-2" id="tiempoCierre" />
        </div>
    </div>

    <div class="col">
        <h4 class="text-primary py-3">Fecha</h4>
        <div class="col-4 d-flex">
            <input type="date" class="form-control me-2" id="fecha" />
        </div>
    </div>

    <div class="col mt-3">
        <span>
            <p class="text-body-secondary">Capacidad / Equipos: </p>
            <input type="text" class="form-control" placeholder="Filtrar..." name="filtro" id="filtro">
        </span>
    </div>

</div>

<table class="table table-hover table-border my-5">
    <thead class="thead-dark">
        <tr>
            <th>Nombre de la Sala</th>
            <th>Capacidad</th>
            <th>Ubicación</th>
            <th>Disponibilidad de Equipos</th>
            <th>Hora de Apertura</th>
            <th>Hora de Cierre</th>
            <th>Acciones</th>
            <th></th>
        </tr>
    </thead>
    <tbody id="tableBody">
        <!-- listado por JS -->
    </tbody>
</table>



<script src="~/Scripts/jquery-3.7.1.min.js"></script>
<script src="~/Scripts/Reserva.js"></script>
