@using Reservas.Models
@model LoginViewModel
@{
    ViewBag.Title = "Iniciar sesión";
}
<main aria-labelledby="title">
    <div class="my-5 container text-white row col-4 d-flex rounded-3 mx-auto p-3 shadow container-login justify-content-center align-items-center">
        <h3 class="text-primary text-center mt-3 mb-5">Inicio de Sesión</h3>

        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "w-100" }))
        {
            @Html.AntiForgeryToken()
            <div class="col-9 mx-auto row g-2">
                @Html.ValidationSummary("", new { @class = "text-danger text-center" })

                <input class="form-control border-0 mb-3 bg-light" type="email" id="email" name="email" placeholder="Correo Electrónico" required />

                <input class="form-control border-0 mb-5 bg-light" type="password" id="password" name="password" placeholder="Contraseña" required />
            </div>
            <div class="d-flex justify-content-center mt-5 my-3">
                <button type="submit" class="btn btn-primary rounded-3">Ingresar</button>
            </div>
        }

    <div class="mx-auto text-center">
        <a class="d-block mb-2" href="/Account/ForgotPassword">Olvidé mi contraseña</a>
        <a href="/Account/Register">Registrarse</a>
    </div>
    </div>
</main>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}