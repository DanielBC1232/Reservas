@model Reservas.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrarse";
}

<main aria-labelledby="title">
    <div class="my-5 container text-white row col-4 d-flex rounded-3 mx-auto p-3 shadow container-login justify-content-center align-items-center">
        <h3 class="text-primary text-center mt-3">Registrarse</h3>

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form", @class = "w-100" }))
        {
            @Html.AntiForgeryToken()

            <div class="col-9 mx-auto my-5">
                @Html.ValidationSummary("", new { @class = "text-danger text-center" })

                <div class="mb-3">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control border-0 bg-light", placeholder = "Correo Electrónico" })
                </div>

                <div class="mb-3">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control border-0 bg-light", placeholder = "Contraseña" })
                </div>

                <div class="mb-3">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control border-0 bg-light", placeholder = "Confirmar Contraseña" })
                </div>
            </div>

            <div class="d-flex justify-content-center my-5">
                <button type="submit" class="btn btn-primary rounded-3">Registrarse</button>
            </div>
        }

        <div class="mx-auto text-center">
            <a class="d-block mb-2" href="/Account/ForgotPassword">Olvidé mi contraseña</a>
            <a class="" href="/Account/ResetPassword">Cambiar contraseña</a>
        </div>
    </div>
</main>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
