    ViewBag.Title = "Delete";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>

    <div class="container col-5">
        <h3>Desea eliminar esta sala?</h3>
        <div>

            <hr class="text-primary"/>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.nombreSala)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.nombreSala)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.capacidad)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.capacidad)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.ubicacion)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ubicacion)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.disponibilidadEquipo)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.disponibilidadEquipo)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.horaApertura)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.horaApertura)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.horaCierre)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.horaCierre)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color my-5">
                    <input type="submit" value="Delete" class="btn btn-danger btn-sm me-3" />
                    @Html.ActionLink("Volver", "Index")
                </div>
            }
        </div>
    </div>
</body>
</html>
